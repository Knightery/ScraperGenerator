{
  "version": 2,
  "env": {
    "FLASK_APP": "api/index.py"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/favicon.ico", 
      "destination": "/static/favicon.ico"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.py"
    }
  ]
}